
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user's profile and core identity within the application.",
      "properties": {
        "id": { "type": "string" },
        "displayName": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "photoURL": { "type": "string" },
        "bio": { "type": "string" },
        "onlineStatus": { "type": "string" },
        "lastOnlineAt": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "serverIds": { "type": "array", "items": { "type": "string" } },
        "allowGroupInvites": { "type": "boolean" },
        "showOnlineStatus": { "type": "boolean" },
        "interfaceMode": { "type": "string", "enum": ["laptop", "tablet", "mobile"] },
        "mutedInviteCommunities": { 
          "type": "object",
          "description": "Map of communityId to ISO expiry date for muted invitations."
        }
      },
      "required": ["id", "displayName", "email", "createdAt"]
    },
    "Community": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Community",
      "type": "object",
      "description": "Represents a server or community where users can interact in channels.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "ownerId": { "type": "string" },
        "admins": { "type": "array", "items": { "type": "string" } },
        "icon": { "type": "string", "format": "uri" },
        "joinCode": { "type": "string" },
        "members": { "type": "array", "items": { "type": "string" } },
        "isPublic": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "disappearingMessagesDuration": { "type": "string" }
      },
      "required": ["id", "name", "ownerId", "createdAt"]
    },
    "Channel": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Channel",
      "type": "object",
      "description": "Represents a channel within a Community.",
      "properties": {
        "id": { "type": "string" },
        "communityId": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "communityId", "name", "type", "createdAt"]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "type": "object",
      "description": "Represents a single chat message.",
      "properties": {
        "id": { "type": "string" },
        "senderId": { "type": "string" },
        "content": { "type": "string" },
        "type": { "type": "string" },
        "sentAt": { "type": "string", "format": "date-time" },
        "audioUrl": { "type": "string" },
        "videoUrl": { "type": "string" },
        "imageUrl": { "type": "string" },
        "fileUrl": { "type": "string" },
        "fileName": { "type": "string" },
        "fileType": { "type": "string" },
        "whisperTo": { "type": "string", "description": "UID of the user this message is whispered to." },
        "disappearingEnabled": { "type": "boolean" },
        "disappearDuration": { "type": "number" },
        "seenBy": { "type": "array", "items": { "type": "string" } },
        "isForwarded": { "type": "boolean" },
        "forwardingChain": { "type": "array" },
        "replyTo": { "type": "object" },
        "deletedFor": { "type": "array", "items": { "type": "string" } },
        "fullyDeleted": { "type": "boolean" },
        "reactions": { "type": "object", "description": "Map of emoji to array of user IDs." }
      },
      "required": ["id", "senderId", "sentAt"]
    },
    "Invitation": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Invitation",
      "type": "object",
      "description": "Represents an invitation to join a community.",
      "properties": {
        "id": { "type": "string" },
        "targetUserId": { "type": "string" },
        "senderId": { "type": "string" },
        "senderName": { "type": "string" },
        "communityId": { "type": "string" },
        "communityName": { "type": "string" },
        "communityIcon": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "accepted", "declined"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "targetUserId", "communityId", "status"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores core user profiles."
        }
      },
      {
        "path": "/communities/{communityId}",
        "definition": {
          "entityName": "Community",
          "schema": { "$ref": "#/backend/entities/Community" }
        }
      },
      {
        "path": "/communities/{communityId}/channels/{channelId}",
        "definition": {
          "entityName": "Channel",
          "schema": { "$ref": "#/backend/entities/Channel" }
        }
      },
      {
        "path": "/communities/{communityId}/channels/{channelId}/messages/{messageId}",
        "definition": {
          "entityName": "Message",
          "schema": { "$ref": "#/backend/entities/Message" }
        }
      },
      {
        "path": "/invitations/{invitationId}",
        "definition": {
          "entityName": "Invitation",
          "schema": { "$ref": "#/backend/entities/Invitation" }
        }
      }
    ]
  }
}
