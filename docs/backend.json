
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "photoURL": { "type": "string", "format": "uri" },
        "bio": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "onlineStatus": { "type": "string", "enum": ["online", "idle", "offline"] },
        "lastSeen": { "type": "string", "format": "date-time" },
        "friends": { "type": "array", "items": { "type": "string" } },
        "serverIds": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "username", "email", "createdAt"]
    },
    "Server": {
      "title": "Server",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "icon": { "type": "string", "format": "uri" },
        "ownerId": { "type": "string" },
        "joinCode": { "type": "string", "description": "A unique 5-digit code to join the server." },
        "members": { "type": "array", "items": { "type": "string" } },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "ownerId", "members", "joinCode"]
    },
    "Channel": {
      "title": "Channel",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "serverId": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["text", "voice"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "serverId", "name", "type"]
    },
    "Message": {
      "title": "Message",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "senderId": { "type": "string" },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "edited": { "type": "boolean" },
        "reactions": { "type": "object" },
        "seenBy": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "senderId", "text", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/User" },
      "description": "User profile data."
    },
    "/servers/{serverId}": {
      "schema": { "$ref": "#/backend/entities/Server" },
      "description": "Server metadata."
    },
    "/channels/{channelId}": {
      "schema": { "$ref": "#/backend/entities/Channel" },
      "description": "Channel metadata."
    },
    "/messages/{channelId}/chatMessages/{messageId}": {
      "schema": { "$ref": "#/backend/entities/Message" },
      "description": "Real-time messages for a channel."
    }
  }
}
