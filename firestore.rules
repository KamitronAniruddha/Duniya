rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        request.auth.token.email == "aniruddha@duniya.app"
      );
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    // Helper to check membership via the denormalized array on the community document
    function isMemberOfCommunity(communityId) {
      let community = get(/databases/$(database)/documents/communities/$(communityId));
      return isSignedIn() && (
        (community.data.members != null && request.auth.uid in community.data.members) ||
        isAdmin()
      );
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      // Allow public read for profiles and uniqueness checks
      allow get, list: if true; 
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();

      match /following/{followedId} {
        allow get, list: if isOwner(userId) || isAdmin();
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      match /stories/{storyId} {
        allow get, list: if isSignedIn();
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId) || isAdmin();
      }

      match /notifications/{notificationId} {
        allow get, list: if isOwner(userId);
        allow create: if isSignedIn();
        allow update, delete: if isOwner(userId);
      }

      match /devices/{deviceId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, create, update, delete: if isAdmin();
    }

    match /contact_form_submissions/{submissionId} {
      allow get: if isAdmin() || (isSignedIn() && resource.data.submitterId == request.auth.uid);
      allow list: if isAdmin();
      allow create: if true; 
      allow update, delete: if isAdmin();
    }

    match /communities/{communityId} {
      // Simplified list rule to ensure queries work for all users
      allow list: if isSignedIn();
      
      // Get requires being a member, it being public, or being an admin
      allow get: if isSignedIn() && (
        resource.data.isPublic == true || 
        (resource.data.members != null && request.auth.uid in resource.data.members) ||
        isAdmin()
      );
      
      allow create: if isSignedIn();
      
      // Allow joining public communities or full updates for owners/admins
      allow update: if (isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin())) || 
                    (resource.data.isPublic == true && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']));
      
      allow delete: if (resource != null && resource.data.ownerId == request.auth.uid) || isAdmin();

      match /members/{userId} {
        allow get, list: if isSignedIn();
        allow create: if isSignedIn(); 
        allow update, delete: if isAdmin() || isOwner(userId) || (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid);
      }

      match /channels/{channelId} {
        allow get, list: if isMemberOfCommunity(communityId) || isAdmin();
        allow create: if isSignedIn(); 
        allow update, delete: if isAdmin() || (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid);

        match /messages/{messageId} {
          allow get, list: if isMemberOfCommunity(communityId) || isAdmin();
          allow create: if isMemberOfCommunity(communityId) && request.resource.data.senderId == request.auth.uid;
          allow update: if isExistingOwner(resource.data.senderId);
          allow delete: if isExistingOwner(resource.data.senderId) || isAdmin();

          match /reactions/{reactionId} {
            allow get, list: if isMemberOfCommunity(communityId);
            allow create: if isMemberOfCommunity(communityId) && request.resource.data.userId == request.auth.uid;
            allow update, delete: if isExistingOwner(resource.data.userId);
          }

          match /read_receipts/{receiptId} {
            allow get, list: if isMemberOfCommunity(communityId);
            allow create: if isMemberOfCommunity(communityId) && request.resource.data.readerId == request.auth.uid;
            allow update, delete: if isExistingOwner(resource.data.readerId);
          }

          match /media_attachments/{mediaId} {
            allow get, list: if isMemberOfCommunity(communityId);
            allow create: if isMemberOfCommunity(communityId) && request.resource.data.uploaderId == request.auth.uid;
            allow update, delete: if isExistingOwner(resource.data.uploaderId);
          }
        }
      }
    }

    match /call_sessions/{callSessionId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isExistingOwner(resource.data.initiatorId) || isAdmin();

      match /participants/{participantId} {
        allow get, list: if isSignedIn();
        allow create: if isOwner(request.resource.data.userId);
        allow update, delete: if isExistingOwner(resource.data.userId) || isAdmin();
      }
    }
  }
}