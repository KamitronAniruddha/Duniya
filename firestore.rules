rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global helper for authenticated users
    function isSignedIn() {
      return request.auth != null;
    }

    // Recursive wildcard for broad authenticated access across the entire DB
    // This is the most robust way to ensure no "Permission Denied" errors for logged-in users
    // Privacy (Whispers) is managed by high-performance query filters in the UI
    match /{document=**} {
      allow read, write: if isSignedIn();
    }

    // User Profiles: Authenticated read, owner-only write
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Contact Submissions
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }
  }
}