
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global helper for authenticated users
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: 
    // - allow public read (get/list) for username uniqueness checks and profile viewing.
    // - allow owner only write.
    match /users/{userId} {
      allow get, list: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Communities and Nested Data:
    // - Broad authenticated access for all community interactions.
    match /communities/{communityId} {
      allow read, write: if isSignedIn();
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Invitations:
    // - allow create by anyone signed in (sender handles this)
    // - allow read/update only by target user
    match /invitations/{inviteId} {
      allow create: if isSignedIn();
      allow read, update: if isSignedIn() && request.auth.uid == resource.data.targetUserId;
    }

    // Contact Submissions: Public creation, authenticated management.
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    // Broad authenticated access for any other collections.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
