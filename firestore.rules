rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global helper for authenticated users
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: 
    // - Allow PUBLIC read (get/list): Essential for username uniqueness checks and profile viewing.
    // - Allow OWNER only write: Only the user can create or update their own identity.
    match /users/{userId} {
      allow get, list: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Communities and Nested Data:
    // - Require authentication for all community interactions.
    // - Privacy (Whispers) is enforced by high-performance client-side query filters.
    match /communities/{communityId} {
      allow read, write: if isSignedIn();
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Contact Submissions: Public creation, authenticated management.
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    // Broad authenticated access for any other collections.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}