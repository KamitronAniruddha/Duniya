
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * ConnectVerse Security Rules
     *
     * CORE PHILOSOPHY:
     * Robust membership validation and resilient data access lookups.
     */

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper to check if a user is in a community's members array
    function isCommunityMember(communityId) {
      let communityDoc = get(/databases/$(database)/documents/communities/$(communityId));
      return isSignedIn() && 
             communityDoc != null && 
             communityDoc.data.keys().contains('members') &&
             request.auth.uid in communityDoc.data.members;
    }

    function isPublicCommunity(communityId) {
      let communityDoc = get(/databases/$(database)/documents/communities/$(communityId));
      return communityDoc != null && 
             communityDoc.data.keys().contains('isPublic') && 
             communityDoc.data.isPublic == true;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(userId);

      match /notifications/{notificationId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      match /xp_history/{xpActivityId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if false;
      }
    }

    match /invitations/{inviteId} {
      allow read, write: if isSignedIn();
    }

    match /contact_form_submissions/{submissionId} {
      allow read, write: if isSignedIn();
    }

    match /conversations/{conversationId} {
      allow read, write: if isSignedIn() && (
        !resource.data.keys().contains('participantIds') || 
        request.auth.uid in resource.data.participantIds
      );
    }

    match /communities/{communityId} {
      allow get: if isSignedIn() && (
        (resource.data.keys().contains('isPublic') && resource.data.isPublic == true) || 
        (resource.data.keys().contains('members') && request.auth.uid in resource.data.members)
      );
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
        allow create, update, delete: if isSignedIn() && (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid);

        match /messages/{messageId} {
          allow get, list: if isSignedIn() && 
                           (isPublicCommunity(communityId) || isCommunityMember(communityId)) &&
                           (
                             !resource.data.keys().contains('visibleTo') || 
                             'all' in resource.data.visibleTo || 
                             request.auth.uid in resource.data.visibleTo
                           );
          allow create: if isSignedIn() && isCommunityMember(communityId);
          allow update, delete: if isSignedIn() && (resource.data.senderId == request.auth.uid || isCommunityMember(communityId));
        }
        
        match /typing/{userId} {
          allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
          allow create, update, delete: if isSignedIn() && request.auth.uid == userId;
        }
      }

      match /members/{memberId} {
        allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
        allow create, update, delete: if isSignedIn() && (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid || request.auth.uid == memberId);
      }
    }

    /**
     * @description Explicit support for collectionGroup queries on messages.
     * Required for cross-channel features and AI analysis.
     */
    match /{path=**}/messages/{messageId} {
      allow read: if isSignedIn() && 
                    (
                      !resource.data.keys().contains('visibleTo') || 
                      'all' in resource.data.visibleTo || 
                      request.auth.uid in resource.data.visibleTo
                    );
    }
  }
}
