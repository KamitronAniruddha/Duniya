
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isServerOwner(serverId) {
      let serverPath = /databases/$(database)/documents/servers/$(serverId);
      return isSignedIn() && existsAfter(serverPath) && getAfter(serverPath).data.ownerId == request.auth.uid;
    }

    function isServerAdmin(serverId) {
      let serverPath = /databases/$(database)/documents/servers/$(serverId);
      
      // Use getAfter to ensure consistency during batch writes (e.g., server + channel creation)
      // getAfter falls back to current state if no change is pending in the batch.
      if (!isSignedIn() || !existsAfter(serverPath)) {
        return false;
      }
      
      let serverData = getAfter(serverPath).data;
      return serverData.ownerId == request.auth.uid || (serverData.admins != null && request.auth.uid in serverData.admins);
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (
        (request.auth.uid == userId) || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['serverIds', 'onlineStatus', 'lastSeen']))
      );
    }

    match /servers/{serverId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.ownerId || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'name', 'icon', 'admins'])
      );
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    match /channels/{channelId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isServerAdmin(request.resource.data.serverId);
      allow update, delete: if isSignedIn() && isServerAdmin(resource.data.serverId);
    }

    match /messages/{channelId}/chatMessages/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.senderId;
    }
  }
}
