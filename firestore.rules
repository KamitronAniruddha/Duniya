
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Duniya Verse Security Rules v7.5
     * 
     * CORE PHILOSOPHY:
     * - Consolidate message rules to handle both channel and recursive (Genealogy) access.
     * - Strict "Whisper" privacy enforced via the 'visibleTo' array.
     * - High-fidelity synchronization for all Verse nodes.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // --- Unified Message Access (The Sovereign Heart) ---
    // This recursive match handles all message collections at any depth.
    match /{path=**}/messages/{messageId} {
      allow read: if isSignedIn() && (
        !('visibleTo' in resource.data) || 
        resource.data.visibleTo.hasAny(['all', request.auth.uid])
      );
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    // --- User Profiles & Identity Node ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      match /xp_history/{activityId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow create: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // --- Communities & Contexts ---
    match /communities/{communityId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
        
        // Note: Message rules are handled by the global recursive match above.
        
        match /typing/{userId} {
          allow read, write: if isSignedIn();
        }
      }

      match /members/{memberId} {
        allow read, write: if isSignedIn();
      }
    }

    // --- Invitations ---
    match /invitations/{inviteId} {
      allow read, write: if isSignedIn();
    }

    // --- Support & Support Node ---
    match /contact_form_submissions/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
    }

    // --- Private Direct Conversations ---
    match /conversations/{conversationId} {
      allow read, write: if isSignedIn() && (
        !('participantIds' in resource.data) || 
        request.auth.uid in resource.data.participantIds
      );
    }
  }
}
