rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if a message is a whisper
    function isWhisper(data) {
      return data.whisperTo != null;
    }

    // Helper to check if user is sender or recipient of a whisper
    function canReadWhisper(data) {
      return data.senderId == request.auth.uid || data.whisperTo == request.auth.uid;
    }

    match /communities/{communityId}/channels/{channelId}/messages/{messageId} {
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (!isWhisper(resource.data) || canReadWhisper(resource.data));
    }

    // BROAD AUTHENTICATED ACCESS FOR OTHER DOCS
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Explicit public access for Community Discovery
    match /communities/{communityId} {
      allow read: if true;
    }

    // Explicit public access for Support Submissions
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
    }
  }
}