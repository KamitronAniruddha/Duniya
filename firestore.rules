
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == "aniruddha@duniya.app" ||
        request.auth.token.email == "aniruddha@gmail.com"
      );
    }

    // --- USER PROFILES ---

    match /users/{userId} {
      allow read: if isSignedIn(); 
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // --- PRIVATE CONVERSATIONS (DMs) ---

    // Flat message matching for maximum reliability
    match /conversations/{conversationId}/messages/{messageId} {
      allow read, write: if isSignedIn();
    }

    match /conversations/{conversationId} {
      allow read, write: if isSignedIn() && (
        isAdmin() || 
        request.auth.uid in resource.data.participantIds || 
        request.auth.uid in request.resource.data.participantIds
      );
    }

    // --- COMMUNITIES & CHANNELS ---

    // Flat message matching for community channels
    match /communities/{communityId}/channels/{channelId}/messages/{messageId} {
      allow read, write: if isSignedIn();
    }

    match /communities/{communityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();

      match /channels/{channelId} {
        allow read, write: if isSignedIn();
      }
      
      match /members/{memberId} {
        allow read, write: if isSignedIn();
      }
    }

    // --- ADMINISTRATIVE & SUPPORT ---

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }

    match /contact_form_submissions/{submissionId} {
      allow create: if true; 
      allow read, write: if isAdmin();
    }
    
    match /call_sessions/{callSessionId} {
      allow read, write: if isSignedIn();
    }

    // Global admin fallback for all paths
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}
