
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Duniya Verse Security Rules v9.0
     * 
     * CORE PHILOSOPHY:
     * - Use resource.data.get() with defaults to prevent rule engine crashes on missing fields.
     * - Unified recursive message match for consistent privacy (Whisper Protocol).
     * - Explicit membership and public access controls for communities.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // --- Unified Message Access (The Sovereign Heart) ---
    // This recursive match handles all message collections at any depth.
    match /{path=**}/messages/{messageId} {
      allow read: if isSignedIn() && (
        resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid])
      );
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    // --- User Profiles & Identity Node ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      match /xp_history/{activityId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow create: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // --- Communities & Contexts ---
    match /communities/{communityId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow get, list: if isSignedIn();
        allow write: if isSignedIn();
        
        match /typing/{userId} {
          allow read, write: if isSignedIn();
        }
      }

      match /members/{memberId} {
        allow get, list: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    // --- Invitations ---
    match /invitations/{inviteId} {
      allow get, list: if isSignedIn();
      allow write: if isSignedIn();
    }

    // --- Support & Support Node ---
    match /contact_form_submissions/{id} {
      allow create: if isSignedIn();
      allow get, list: if isSignedIn();
    }

    // --- Private Direct Conversations ---
    match /conversations/{conversationId} {
      allow get, list: if isSignedIn() && (
        !('participantIds' in resource.data) || 
        request.auth.uid in resource.data.participantIds
      );
      allow create, update: if isSignedIn();
    }
  }
}
