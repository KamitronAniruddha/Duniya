
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        request.auth.token.email == "aniruddha@duniya.app"
      );
    }

    // --- USER PROFILES ---

    match /users/{userId} {
      allow read: if true; 
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // --- PRIVATE CONVERSATIONS (DMs) ---

    match /conversations/{conversationId} {
      allow read, update: if isSignedIn() && (request.auth.uid in resource.data.participantIds || isAdmin());
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read, create: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds || isAdmin());
        allow update: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds || isAdmin()) && (
          request.resource.data.diff(resource.data).affectedKeys().hasAny([
            'seenBy', 'viewerExpireAt', 'deletedFor', 'isDeleted', 'content', 'type', 
            'audioUrl', 'videoUrl', 'senderExpireAt', 'fullyDeleted'
          ])
        );
        allow delete: if isAdmin() || (isSignedIn() && resource.data.senderId == request.auth.uid);
      }
    }

    // --- COMMUNITIES & CHANNELS ---

    match /communities/{communityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin() || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'admins'])));
      allow delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());

      match /channels/{channelId} {
        allow read, write: if isSignedIn();

        match /messages/{messageId} {
          allow read, create: if isSignedIn();
          allow update: if isSignedIn() && (
            isAdmin() || 
            resource.data.senderId == request.auth.uid ||
            (request.resource.data.diff(resource.data).affectedKeys().hasAny([
              'seenBy', 'viewerExpireAt', 'deletedFor', 'isDeleted', 'content', 'type', 
              'audioUrl', 'videoUrl', 'senderExpireAt', 'fullyDeleted'
            ]))
          );
          allow delete: if isSignedIn() && (resource.data.senderId == request.auth.uid || isAdmin());
        }
      }
    }

    // --- ADMINISTRATIVE & SUPPORT ---

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }

    match /contact_form_submissions/{submissionId} {
      allow get: if isAdmin() || (isSignedIn() && resource.data.submitterId == request.auth.uid);
      allow list: if isAdmin();
      allow create: if true; 
      allow update, delete: if isAdmin();
    }
    
    match /call_sessions/{callSessionId} {
      allow read, write: if isSignedIn();
    }
  }
}
