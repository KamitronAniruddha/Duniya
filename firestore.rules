rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Duniya Verse Security Rules v18.0
     * 
     * CORE PHILOSOPHY:
     * - Explicit path matching for robust collection listing.
     * - Safe-default field access to prevent evaluation crashes.
     * - Unified Whisper Protocol for high-fidelity privacy.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isCommunityAdmin(communityId) {
      return request.auth.uid in get(/databases/$(database)/documents/communities/$(communityId)).data.get('admins', []);
    }

    // --- User Profiles & Identity Node ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      match /xp_history/{activityId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow create: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // --- Communities & Contexts ---
    match /communities/{communityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
        
        match /typing/{userId} {
          allow read, write: if isSignedIn();
        }

        // EXPLICIT MESSAGE PATH - Required for standard listing authorization
        match /messages/{messageId} {
          allow read: if isSignedIn() && (
            resource.data.senderId == request.auth.uid ||
            resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid])
          );
          allow create: if isSignedIn();
          allow update, delete: if isSignedIn() && (
            resource.data.senderId == request.auth.uid ||
            isCommunityAdmin(communityId)
          );
        }
      }

      match /members/{memberId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    // --- Unified Recursive Message Access (Forwarding & Lineage) ---
    match /{path=**}/messages/{messageId} {
      allow read: if isSignedIn() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid])
      );
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (
        resource.data.senderId == request.auth.uid
      );
    }

    // --- Private Direct Conversations ---
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && (
        !('participantIds' in resource.data) || 
        request.auth.uid in resource.data.participantIds
      );
      allow create, update: if isSignedIn();
    }

    // --- Invitations ---
    match /invitations/{inviteId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // --- Support & Admin ---
    match /contact_form_submissions/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
    }
  }
}