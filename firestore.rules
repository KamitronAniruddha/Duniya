rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profiles: Authenticated read, owner-only write
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Communities: Public read for discovery, authenticated creation
    match /communities/{communityId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      // Channels: Authenticated access
      match /channels/{channelId} {
        allow read, write: if isSignedIn();
        
        // Messages: Authenticated access
        // Privacy (Whispers) is managed by query filters in the UI
        match /messages/{messageId} {
          allow read, write: if isSignedIn();
        }
      }
      
      // Subcollections fallback
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Conversations (DMs)
    match /conversations/{conversationId} {
      allow read, write: if isSignedIn();
    }

    // Contact Submissions
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    // Global Fallback for authenticated users
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}