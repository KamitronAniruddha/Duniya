
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * ConnectVerse Security Rules
     *
     * CORE PHILOSOPHY:
     * Strict user-ownership model for personal data and a sub-collection
     * membership model for community interactions.
     */

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    // Helper to check if a user is in a community's members sub-collection
    function isCommunityMember(communityId) {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/communities/$(communityId)/members/$(request.auth.uid));
    }

    function isPublicCommunity(communityId) {
      return exists(/databases/$(database)/documents/communities/$(communityId)) && 
             get(/databases/$(database)/documents/communities/$(communityId)).data.isPublic == true;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      match /notifications/{notificationId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /xp_history/{xpActivityId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if false;
      }
    }

    /**
     * @description Community invitations.
     */
    match /invitations/{inviteId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.targetUserId || request.auth.uid == resource.data.senderId);
      allow list: if isSignedIn(); 
      allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      allow update: if isSignedIn() && (request.auth.uid == resource.data.targetUserId || request.auth.uid == resource.data.senderId);
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.targetUserId || request.auth.uid == resource.data.senderId);
    }

    /**
     * @description Contact form submissions for support.
     */
    match /contact_form_submissions/{submissionId} {
      allow get, list: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false;
    }

    /**
     * @description DM Conversations.
     */
    match /conversations/{conversationId} {
      allow get: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow delete: if false;
    }

    match /communities/{communityId} {
      allow get: if isSignedIn() && (resource.data.isPublic == true || request.auth.uid in resource.data.members);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
        allow create, update, delete: if isSignedIn() && (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid);

        match /messages/{messageId} {
          allow get, list: if isSignedIn() && 
                           (isPublicCommunity(communityId) || isCommunityMember(communityId)) &&
                           (!('visibleTo' in resource.data) || resource.data.visibleTo.hasAny(['all', request.auth.uid]));
          allow create: if isSignedIn() && isCommunityMember(communityId) && request.resource.data.senderId == request.auth.uid;
          allow update, delete: if isSignedIn() && (resource.data.senderId == request.auth.uid || get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid);
        }
        
        match /typing/{userId} {
          allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
          allow create, update: if isSignedIn() && request.auth.uid == userId;
          allow delete: if isSignedIn() && request.auth.uid == userId;
        }
      }

      match /members/{memberId} {
        // Members list is accessible to all signed in users if they belong to the community or it's public
        allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
        allow create, update, delete: if isSignedIn() && (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid || request.auth.uid == memberId);
      }
    }

    /**
     * @description Support for collectionGroup queries on messages (e.g. for unread badges).
     * This is critical for cross-channel unread counts.
     */
    match /{path=**}/messages/{messageId} {
      allow read: if isSignedIn() && 
                    // Verify the message is either public or intended for the current user
                    (resource.data.visibleTo.hasAny(['all', request.auth.uid])) &&
                    // Verify membership in the specific community this message belongs to
                    ('serverId' in resource.data && isCommunityMember(resource.data.serverId));
    }
  }
}
