
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        request.auth.token.email == "aniruddha@duniya.app"
      );
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      // Allow reading user profiles for search and identification
      allow read: if true; 
      
      // Users can create their own profile document
      allow create: if isOwner(userId);
      
      // Users can update their own status/profile, or admins can manage
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();

      // Nested subcollections
      match /{allPaths=**} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId) || isAdmin();
      }
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }

    match /contact_form_submissions/{submissionId} {
      allow get: if isAdmin() || (isSignedIn() && resource.data.submitterId == request.auth.uid);
      allow list: if isAdmin();
      allow create: if true; 
      allow update, delete: if isAdmin();
    }

    match /communities/{communityId} {
      // Allow authenticated users to browse communities
      allow read: if isSignedIn();
      
      // Allow authenticated users to create communities
      allow create: if isSignedIn();
      
      // Allow owners or admins to update community settings
      allow update: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
      
      // Allow owners or admins to delete communities
      allow delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());

      // Nested channels, messages, members, etc.
      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /call_sessions/{callSessionId} {
      allow read, write: if isSignedIn();

      match /{allPaths=**} {
        allow read, write: if isSignedIn();
      }
    }
  }
}
