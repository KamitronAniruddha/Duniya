
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global helper for authenticated users
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: 
    // - allow public read for identity lookups.
    // - allow owner only write.
    // - allow limited update for "Identity Contributions" if owner permits.
    match /users/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (
        request.auth.uid == userId || 
        (resource.data.allowExternalAvatarEdit == true && 
         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['photoURL', 'updatedAt']))
      );
    }

    // Communities and Nested Data:
    // - Broad authenticated access for all community interactions.
    match /communities/{communityId} {
      allow read, write: if isSignedIn();
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Invitations:
    // - allow broad access for signed in users to handle requests.
    match /invitations/{inviteId} {
      allow read, write: if isSignedIn();
    }

    // Conversations (DMs):
    // - allow broad access for signed in users.
    match /conversations/{convId} {
      allow read, write: if isSignedIn();
    }

    // Contact Submissions: Public creation, authenticated management.
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    // Catch-all for any other collections.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
