
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * ConnectVerse Security Rules v6.0
     * 
     * CORE PHILOSOPHY:
     * - Authenticated users can browse the Verse directory.
     * - Message visibility is strictly governed by the 'visibleTo' field (Whisper Privacy).
     * - Profile privacy (Blur/Hidden) is handled at the application rendering level.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      
      match /xp_history/{activityId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
      }
    }

    // --- Communities & Contexts ---
    match /communities/{communityId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();

        match /messages/{messageId} {
          allow read: if isSignedIn() && (
            !('visibleTo' in resource.data) || 
            resource.data.visibleTo.hasAny(['all', request.auth.uid])
          );
          allow create: if isSignedIn();
          allow update, delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
        }
        
        match /typing/{userId} {
          allow read, write: if isSignedIn();
        }
      }

      match /members/{memberId} {
        allow read, write: if isSignedIn();
      }
    }

    // --- Global Message Access (Genealogy & History) ---
    match /{path=**}/messages/{messageId} {
      allow read: if isSignedIn() && (
        !('visibleTo' in resource.data) || 
        resource.data.visibleTo.hasAny(['all', request.auth.uid])
      );
    }

    // --- Invitations ---
    match /invitations/{inviteId} {
      allow read, write: if isSignedIn();
    }

    // --- Support & Conversations ---
    match /contact_form_submissions/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
    }

    match /conversations/{conversationId} {
      allow read, write: if isSignedIn() && (
        !('participantIds' in resource.data) || 
        request.auth.uid in resource.data.participantIds
      );
    }
  }
}
