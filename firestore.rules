rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow read for everyone to check username uniqueness and show members
      allow read: if true;
      // Allow owner to create their own doc
      allow create: if isOwner(userId);
      // Allow updates to specific fields (serverIds, status) by any signed-in user for invites/presence
      // This is crucial for the "Invite" feature to work across user boundaries
      allow update: if isOwner(userId) || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['serverIds', 'onlineStatus', 'lastSeen']));
    }

    match /servers/{serverId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Allow update if owner OR if only the members list is being updated (for joining/inviting)
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.ownerId || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members'])
      );
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    match /channels/{channelId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    match /messages/{channelId}/chatMessages/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.senderId;
    }
  }
}