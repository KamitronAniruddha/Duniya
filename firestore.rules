
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * ConnectVerse Security Rules
     *
     * CORE PHILOSOPHY:
     * Strict user-ownership model for personal data and an array-based
     * membership model for community interactions.
     */

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    // Helper to check if a user is in a community's members array
    function isCommunityMember(communityId) {
      let community = get(/databases/$(database)/documents/communities/$(communityId)).data;
      return isSignedIn() && (request.auth.uid in community.members);
    }

    function isPublicCommunity(communityId) {
      return get(/databases/$(database)/documents/communities/$(communityId)).data.isPublic == true;
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      match /notifications/{notificationId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /stories/{storyId} {
        allow get: if isSignedIn() && (isOwner(userId) || resource.data.viewableByFriendIds[request.auth.uid] == true);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }

      match /xp_history/{xpActivityId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if false;
      }

      match /achievements/{userAchievementId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if isOwner(userId);
      }

      match /ai_suggestions/{suggestionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isExistingOwner(userId);
      }
    }

    /**
     * @description Community invitations.
     */
    match /invitations/{inviteId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.targetUserId || request.auth.uid == resource.data.senderId);
      allow list: if isSignedIn(); 
      allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      allow update: if isSignedIn() && (request.auth.uid == resource.data.targetUserId || request.auth.uid == resource.data.senderId);
      allow delete: if isSignedIn() && (request.auth.uid == resource.data.targetUserId || request.auth.uid == resource.data.senderId);
    }

    /**
     * @description Contact form submissions for support.
     */
    match /contact_form_submissions/{submissionId} {
      allow get, list: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if false;
    }

    /**
     * @description DM Conversations.
     */
    match /conversations/{conversationId} {
      allow get: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow delete: if false;
    }

    match /friendships/{friendshipId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.requesterId || request.auth.uid == resource.data.addresseeId);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.requesterId == request.auth.uid;
      allow update, delete: if isSignedIn() && (request.auth.uid == resource.data.requesterId || request.auth.uid == resource.data.addresseeId);
    }

    match /communities/{communityId} {
      allow get: if isSignedIn() && (resource.data.isPublic == true || request.auth.uid in resource.data.members);
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
        allow create, update, delete: if isSignedIn() && (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid);

        match /messages/{messageId} {
          allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
          allow create: if isSignedIn() && isCommunityMember(communityId) && request.resource.data.senderId == request.auth.uid;
          allow update, delete: if isSignedIn() && (resource.data.senderId == request.auth.uid || get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid);

          match /reactions/{reactionId} {
            allow get, list: if isSignedIn();
            allow create, update, delete: if isSignedIn() && (request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid);
          }
        }
        
        match /typing/{userId} {
          allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
          allow create, update: if isSignedIn() && request.auth.uid == userId;
          allow delete: if isSignedIn() && request.auth.uid == userId;
        }
      }

      match /members/{memberId} {
        allow get, list: if isSignedIn() && (isPublicCommunity(communityId) || isCommunityMember(communityId));
        allow create, update, delete: if isSignedIn() && (get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid || request.auth.uid == memberId);
      }

      match /roles/{roleId} {
        allow get, list: if isSignedIn() && isCommunityMember(communityId);
        allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
      }

      match /user_roles/{userRoleId} {
        allow get, list: if isSignedIn() && isCommunityMember(communityId);
        allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
      }

      match /invite_links/{inviteId} {
        allow get: if isSignedIn();
        allow list: if isSignedIn() && isCommunityMember(communityId);
        allow create, update, delete: if isSignedIn() && get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId == request.auth.uid;
      }
    }

    match /media_attachments/{mediaId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.uploaderId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.uploaderId == request.auth.uid;
    }

    match /calls/{callId} {
      allow get: if isSignedIn() && (request.auth.uid == resource.data.initiatorId || request.auth.uid in resource.data.participantIds);
      allow list: if false;
      allow create: if isSignedIn() && request.resource.data.initiatorId == request.auth.uid;
      allow update: if isSignedIn() && (request.auth.uid == resource.data.initiatorId || request.auth.uid in resource.data.participantIds);
      allow delete: if false;
    }

    match /reports/{reportId} {
      allow get: if isSignedIn() && resource.data.reporterId == request.auth.uid;
      allow list: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.reporterId == request.auth.uid;
      allow update, delete: if false;
    }

    match /achievements/{achievementId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

  }
}
