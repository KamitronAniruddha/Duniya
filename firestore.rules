rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Global helper for authenticated users
    function isSignedIn() {
      return request.auth != null;
    }

    // User Profiles: 
    // - Allow public read (essential for username uniqueness checks and profile viewing)
    // - Allow users to write/update only their own profile
    match /users/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Communities and Nested Data:
    // - Require authentication for all community interactions
    // - Specific privacy (Whispers) is enforced by high-performance client queries
    match /communities/{communityId} {
      allow read, write: if isSignedIn();
      
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Contact Submissions: Public creation, authenticated management
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    // Broad authenticated access for any other collections
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}