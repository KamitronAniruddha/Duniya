rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow read for everyone to check username uniqueness during signup
      allow read: if true;
      allow create, update: if isOwner(userId);
    }

    match /servers/{serverId} {
      // Allow read for any signed in user to discover/verify servers
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Allow update if owner OR if only the members list is being updated (for joining)
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.ownerId || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members'])
      );
      allow delete: if isSignedIn() && request.auth.uid == resource.data.ownerId;
    }

    match /channels/{channelId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    match /messages/{channelId}/chatMessages/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.senderId;
    }
  }
}