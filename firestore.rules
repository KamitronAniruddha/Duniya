rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Duniya Verse Security Rules v16.0
     * 
     * CORE PHILOSOPHY:
     * - Resilient recursive matching for deep Verse hierarchies.
     * - Safe-default field access to prevent evaluate crashes.
     * - Unified Whisper Protocol for high-fidelity privacy.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // --- User Profiles & Identity Node ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      match /xp_history/{activityId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow create: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // --- Communities & Contexts ---
    match /communities/{communityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
        
        match /typing/{userId} {
          allow read, write: if isSignedIn();
        }
      }

      match /members/{memberId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    // --- Unified Recursive Message Access (Forwarding, Whispers & Lineage) ---
    // Handles standard channels, forwards, and deep recursive lineages.
    // Uses safe-default get() to prevent evaluation crashes on missing fields.
    match /{path=**}/messages/{messageId} {
      allow read: if isSignedIn() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid])
      );
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (
        resource.data.senderId == request.auth.uid ||
        request.auth.uid in get(/databases/$(database)/documents/communities/$(resource.data.serverId)).data.get('admins', [])
      );
    }

    // --- Private Direct Conversations ---
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && (
        !('participantIds' in resource.data) || 
        request.auth.uid in resource.data.participantIds
      );
      allow create, update: if isSignedIn();
    }

    // --- Invitations ---
    match /invitations/{inviteId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // --- Support & Admin ---
    match /contact_form_submissions/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
    }
  }
}