
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isCommunityAdmin(communityId) {
      return isSignedIn() && (
        request.auth.uid in get(/databases/$(database)/documents/communities/$(communityId)).data.get('admins', []) ||
        request.auth.uid == get(/databases/$(database)/documents/communities/$(communityId)).data.ownerId
      );
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (
        request.auth.uid == userId ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['photoURL', 'updatedAt']) &&
          resource.data.get('allowExternalAvatarEdit', false) == true
        ) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pendingProfileRequests']) &&
          request.auth.uid != userId
        ) ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['authorizedViewers']) &&
          request.auth.uid == userId
        )
      );
      allow delete: if isSignedIn() && request.auth.uid == userId;
      
      match /xp_history/{activityId} {
        allow read: if isSignedIn() && request.auth.uid == userId;
        allow create: if isSignedIn() && request.auth.uid == userId;
        allow delete: if isSignedIn() && request.auth.uid == userId;
      }
    }

    match /communities/{communityId} {
      allow read, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.get('admins', []) ||
        (
          // Allow any member to remove themselves from members and admins (Graceful Exit)
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'admins']) &&
          request.resource.data.members.hasOnly(resource.data.members.removeAll([request.auth.uid])) &&
          request.resource.data.get('admins', []).hasOnly(resource.data.get('admins', []).removeAll([request.auth.uid]))
        )
      );
      allow delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /channels/{channelId} {
        allow read, list: if isSignedIn();
        allow write: if isSignedIn();
        
        match /typing/{userId} {
          allow read, write: if isSignedIn();
        }

        match /messages/{messageId} {
          // Explicit list/get separation for provable synchronization
          allow list: if isSignedIn() && resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid]);
          allow get: if isSignedIn() && (
            resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid]) ||
            resource.data.senderId == request.auth.uid
          );
          allow create: if isSignedIn();
          allow update: if isSignedIn() && (
            resource.data.senderId == request.auth.uid ||
            isCommunityAdmin(communityId) ||
            (
              request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seenBy', 'viewerExpireAt']) &&
              resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid])
            )
          );
          allow delete: if isSignedIn() && (
            resource.data.senderId == request.auth.uid ||
            isCommunityAdmin(communityId)
          );
        }
      }

      match /members/{memberId} {
        allow read, list: if isSignedIn();
        allow write: if isSignedIn();
        allow delete: if isSignedIn() && (request.auth.uid == memberId || isCommunityAdmin(communityId));
      }
    }

    // Global tracing node for recursive lineage
    match /{path=**}/messages/{messageId} {
      allow list: if isSignedIn() && resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid]);
      allow get: if isSignedIn() && (
        resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid]) ||
        resource.data.senderId == request.auth.uid
      );
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.senderId == request.auth.uid ||
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seenBy', 'viewerExpireAt']) &&
          resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid])
        )
      );
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }

    match /invitations/{inviteId} {
      allow read, list: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /contact_form_submissions/{id} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
    }
  }
}
