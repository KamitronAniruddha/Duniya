
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.get('email', '') == "aniruddha@duniya.app" ||
        request.auth.token.get('email', '') == "aniruddha@gmail.com"
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- GLOBAL ACCESS ---
    // Allow any signed-in user to read and write to core chat collections.
    // This ensures high reliability while we refine granular access.
    
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /communities/{communityId} {
      allow read, write: if isSignedIn();
      
      // Explicitly allow subcollection access
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    match /conversations/{conversationId} {
      allow read, write: if isSignedIn();
      
      // Explicitly allow subcollection access
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // --- SUPPORT & MISC ---
    
    match /contact_form_submissions/{submissionId} {
      allow create: if true; 
      allow read, write: if isAdmin();
    }

    // Catch-all for any other path to ensure admins always have access
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}
