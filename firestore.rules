
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // BROAD AUTHENTICATED ACCESS
    // This policy ensures that all features (Messaging, Community discovery, Profile updates)
    // function without "Insufficient Permissions" errors for any signed-in user.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // PUBLIC DISCOVERY (For Duniya Directory)
    match /communities/{communityId} {
      allow read: if true;
    }

    // CONTACT FORM SUBMISSIONS
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
    }
  }
}
