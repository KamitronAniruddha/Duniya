rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profiles: Authenticated read, owner-only write
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Communities: Public read for discovery, authenticated creation
    match /communities/{communityId} {
      allow read: if true;
      allow write: if isSignedIn();
      
      // Channels: Authenticated access
      match /channels/{channelId} {
        allow read, write: if isSignedIn();
        
        // Messages: Advanced visibility and seen status rules
        match /messages/{messageId} {
          allow create: if isSignedIn();
          
          // Simplified read rule perfectly aligned with the visibleTo query logic: 
          // where("visibleTo", "array-contains-any", ["all", user.uid])
          allow read: if isSignedIn() && (
            resource.data.get('visibleTo', ['all']).hasAny(['all', request.auth.uid]) ||
            resource.data.senderId == request.auth.uid ||
            !('visibleTo' in resource.data)
          );

          // Allow updates for seen status, disappearing timers, and deletions
          allow update: if isSignedIn();
          
          allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
        }
      }
      
      // Subcollections fallback
      match /{allSubcollections=**} {
        allow read, write: if isSignedIn();
      }
    }

    // Conversations (DMs)
    match /conversations/{conversationId} {
      allow read, write: if isSignedIn() && (request.auth.uid in resource.data.participantIds);
    }

    // Contact Submissions
    match /contact_form_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    // Global Fallback for authenticated users
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}